{
    "manifest_version": 3,
    "name": "Screener Transcript Helper",
    "version": "1.2",
    "description": "Adds a button to ask questions about PDF transcripts found on Screener.in.",
  
    "permissions": [
      "storage"
    ],
  
    "host_permissions": [
      "https://*.screener.in/*",
      "https://*.vercel.app/*"
    ],
  
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png"
      }
    },
  
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
  
    "content_scripts": [
      {
        "matches": ["https://*.screener.in/*"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ],
  
    "background": {
      "service_worker": "background.js"
    }
  }